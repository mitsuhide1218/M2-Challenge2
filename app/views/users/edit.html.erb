<h2>User info</h2>

<%= form_for(@user) do |f| %>

<div class="field">
	<%= f.label :title %>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field">
	<%= f.label :introduction %>
	<%= f.text_area :introduction, class: "introduction" %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
<div class="alert alert-warning">
	<h4><%= @user.errors.count %>件のerrorが発生しました。</h4><!--エラーメッセ-->
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->